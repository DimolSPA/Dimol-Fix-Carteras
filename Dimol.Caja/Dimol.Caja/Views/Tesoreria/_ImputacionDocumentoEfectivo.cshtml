<script>
    $(document).on("change", ".qty1", function () {
        var sum = 0;
        var supera = 0;
        var inputsum
        $(".qty1").each(function () {
           
            var monto = $(this).val().replace(/^0+/, "")
                                            .replace(/\D/g, "")
                                            .replace(".", "");
            console.log(monto)
            sum += +monto;
            if (sum > parseFloat($("#ISaldoRebajar").val().replace(".", "").replace(",00", "").replace(/^0+/, "").replace(/\D/g, ""))) {
                supera = 1;

            }
        });
        if (supera == 1) {
            alert("El valor ingresado supera el monto a rebajar")
        }

