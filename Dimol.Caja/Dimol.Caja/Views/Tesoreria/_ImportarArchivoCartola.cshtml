
@using Mvc.HtmlHelpers
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCargaCartolaBanco" }))
{
    <div class="panel panel-primary">
        <div class="panel-heading">Importar Archivo</div>
        <div class="panel-body">
            <div class="tabla">
                <div id="loadingcargaArchivo" style="display: none" class="progressLoading">
                    <img src="~/Images/ajax-loader.gif" />
                </div>
                <div class="fila">
                    <div class="col" style="width:100px;height:25px;margin-top: 5px;"> Archivo</div>
                    <div class="col" style="width:300px"><input id="subirArchivoCartola" type="file" style="width:300px"><input type="hidden" name="ArchivoCartola" id="ArchivoCartola"></div>
                    <div class="col"><input type="submit" id="btnSubmitCartola" value="Subir Archivo" /></div>
                    <div class="col"><img id="imgSubirArchivoCartola" src="~/Images/blank.png" class="" style="float:left" /></div>
                </div>
                <div class="fila">
                    <div class="col" style="width:100px;height:25px;margin-top: 5px;">Tipo  de Archivo</div>
                    <div class="col" style="width:200px;">
                        <div id="tipoarchivoCartola">
                            <label>
                                <input type="radio" name="fileTypeCartola" value="1" checked="checked"> Excel
                            </label>
                            @*<label>
                                <input type="radio" name="fileTypeCartola" value="2" disabled> PDF
                            </label>*@
                            <label>
                                <input type="radio" name="fileTypeCartola" value="3" disabled> Archivo TXT
                            </label>
                        </div>
                    </div>

                </div>
                <div class="fila">
                    <div class="col" style="float:right;height:25px;margin-top: 5px;">
                        <input type="button" value="Nuevo" onclick="fnLimpiarCargaCartola();" />
                        <input type="button" value="Cargar" onclick="fnCargarArchivoCartola();" disabled="disabled" id="btnCargarCartola" />
                    </div>
                </div>
                

            </div>
        </div>
    </div>
    <div class="tabla">
        <div class="fila">
            <div class="col" style="width:650px; flex-align:center">
                @(Html.jqGrid("gridErroresCargaCartola")
                    .addColumn(new Column("NumCuenta").setLabel("Cuenta")
                        .setSortable(true).setAlign(Align.right)
                        .setWidth(100))
                    .addColumn(new Column("FecMovimiento").setLabel("Fecha")
                        .setSortable(true).setAlign(Align.center).setFormatter(Formatters.date).setDateFmt("d-m-Y")
                        .setWidth(70))
                    .addColumn(new Column("Monto").setLabel("Monto")
                        .setSortable(true).setAlign(Align.center).setAlign(Align.right).setFormatter(Formatters.integer)
                        .setWidth(60))
                    .addColumn(new Column("Motivo").setLabel("Motivo")
                        .setSortable(true)
                        .setWidth(90))
                    .addColumn(new Column("Sucursal").setLabel("Sucursal")
                        .setSortable(true).setHidden(true)
                        .setWidth(30))
                    .addColumn(new Column("Mensaje").setLabel("Mensaje")
                    .setSortable(true)
                    .setWidth(110))

                    // settings
                    .setCaption("Resultado").setDataType(DataType.local).setData("")

                    .setAltRows(true)
                    .setAltClass("altGridRows")
                    .setAutoWidth(true)
                    .setRowNum(10)
                    .setRowList(new int[] { 10, 30, 50 })
                    .setViewRecords(true)
                    .setSortName("Nombre")
                    .setSortOrder(SortOrder.asc)
                    .setPager("pagerErroresCargaCartola")
                    .setPagerPos(PagerPos.center)
                    .setPgButtons(true)
                    .setCellEdit(false)
                    .setCellSubmit(CellSubmit.clientArray)

                    .Render()

                )
            </div>
        </div>

    </div>
}