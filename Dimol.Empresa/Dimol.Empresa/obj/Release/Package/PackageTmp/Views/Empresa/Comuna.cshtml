@model Dimol.Empresa.Models.GridModel
@{
    ViewBag.Title = "Comunas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Comunas</h2>
<br /><br />
@using Mvc.HtmlHelpers
@(Html.jqGrid("Comunas")
   
    .addColumn(new Column("IdPais").setLabel("IdPais")
        .setEditable(false)    
        .setHidden(true)
        .setSortable(true)
        .setWidth(80))
     .addColumn(new Column("NombrePais").setLabel("Pais")
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\"" + ViewBag.Pais + "\"")
        .setWidth(200))
    .addColumn(new Column("IdRegion").setLabel("IdRegion")
        .setEditable(false)    
        .setHidden(true)
        .setSortable(true)
        .setWidth(80))
    .addColumn(new Column("NombreRegion").setLabel("Region")
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\"" + ViewBag.Region + "\"")
        .setWidth(200))
    .addColumn(new Column("IdCiudad").setLabel("IdCiudad")
        .setEditable(false)    
        .setHidden(true)
        .setSortable(true)
        .setWidth(80))
    .addColumn(new Column("NombreCiudad").setLabel("Ciudad")
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\"" + ViewBag.Ciudad + "\"")
        .setWidth(200))
      .addColumn(new Column("IdComuna").setLabel("IdComuna")
        .setEditable(false)    
        .setHidden(true)
        .setSortable(true)
        .setWidth(80))
    .addColumn(new Column("NombreComuna").setLabel("Comuna")
        .setHidden(false)
        .setEditable(true)
        .setSortable(true)
        .setWidth(200))
     .addColumn(new Column("CodigoPostal").setLabel("Codigo Area")
        .setHidden(false)
        .setEditable(true)
        .setSortable(true)
        .setWidth(80))

    .setCaption("Comuna")
    .setRequestType(RequestType.get)
    .setUrl("~/Empresa/GetComuna/")
    .setAltRows(true)
    .setAltClass("altGridRows")
    .setAutoWidth(true)
    .setRowNum(10)
    .setRowList(new int[] { 10, 30, 50 })
    .setViewRecords(true)
    .setSortName("NombrePais,NombreRegion,NombreCiudad,NombreComuna")
    .setSortOrder(SortOrder.asc)
    .setPager("pagerComuna")
    .setPagerPos(PagerPos.center)
    .setPgButtons(true)
    .setCellEdit(false)
    .setCellSubmit(CellSubmit.clientArray)
    .setNavEdit(ViewBag.Edit)
    .setEditUrl("/Empresa/OperComuna")
    .setNavAdd(ViewBag.Add)
    .setAddUrl("/Empresa/OperComuna")
    .setNavDel(ViewBag.Del)
    .setDelUrl("/Empresa/OperComuna")
    .setExcelExport("/Empresa/ExportToExcelComuna")
    .Render()

)
