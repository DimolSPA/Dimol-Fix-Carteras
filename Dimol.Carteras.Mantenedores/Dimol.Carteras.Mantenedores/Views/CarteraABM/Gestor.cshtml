@model Dimol.Carteras.Mantenedores.Models.GridModel
@{
    ViewBag.Title = "Gestor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Gestor</h2>
<br /><br />
@using Mvc.HtmlHelpers

@(Html.jqGrid("OperGestor")
    .addColumn(new Column("Codemp").setLabel("codemp")
        .setHidden(true)
        .setEditable(true)
        .setWidth(50))
    .addColumn(new Column("CodSucursal").setLabel("CodSucursal")
        .setHidden(true)
        .setEditable(true)
        .setWidth(50))
    .addColumn(new Column("Id").setLabel("Id")
        .setEditable(false)
        .setSortable(true)
        .setWidth(50))
    .addColumn(new Column("Nombre").setLabel("Nombre")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(200))
   .addColumn(new Column("Telefono").setLabel("Telefono")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(80))
   .addColumn(new Column("Email").setLabel("Email")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(200))
   .addColumn(new Column("TipoCartera").setLabel("Tipo Cartera")
        .setSortable(true)
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\"" + ViewBag.Tipo + "\"")
        .setWidth(120))
   .addColumn(new Column("ComKi").setLabel("% Comisión K+I Pre")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(80))
    .addColumn(new Column("ComHon").setLabel("% Comisión Honorarios Pre")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(80))
   .addColumn(new Column("ComJKi").setLabel("% Comisión K+I Jud")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(80))        
   .addColumn(new Column("ComJHon").setLabel("% Comisión Honorarios Jud")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(80))    
   .addColumn(new Column("Remoto").setLabel("Gestor Remoto")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(80))    
   .addColumn(new Column("Estado").setLabel("Activo")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(80)) 
   .addColumn(new Column("Empleado").setLabel("Empleado")
       .setSortable(true)
       .setEditable(true)
       .setEditType(EditType.select)
       .setEditOptions("value:\"" + ViewBag.Empleado + "\"")
       .setWidth(100))   
    .addColumn(new Column("Grupo").setLabel("Grupo")
       .setSortable(true)
       .setEditable(true)
       .setEditType(EditType.select)
       .setEditOptions("value:\"" + ViewBag.Grupo + "\"")
       .setWidth(100))  

                 
     //.addColumn(new Column("Compromiso").setLabel("Solicita Monto Compromiso")
     //   .setEditable(true)
     //   .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
     //   .setAlign(Align.center)
     //   .setWidth(120))
        
     //.addColumn(new Column("Utiliza").setLabel("Estado por documento")
     //   .setEditable(true)
     //   .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
     //   .setAlign(Align.center)
     //   .setWidth(120))

    .setCaption("Gestor")
    .setRequestType(RequestType.get)
    .setUrl("~/CarteraABM/GetGestor/")
    .setAltRows(true)
    .setAltClass("altGridRows")
    .setAutoWidth(true)
    .setRowNum(10)
    .setRowList(new int[] { 10, 30, 50 })
    .setViewRecords(true)
    .setSortName("Nombre")
    .setSortOrder(SortOrder.asc)
    .setPager("pagerGestor")
    .setPagerPos(PagerPos.center)
    .setPgButtons(true)
    .setCellEdit(false)
    .setCellSubmit(CellSubmit.clientArray)
    .setNavEdit(ViewBag.Edit)
    .setEditUrl("/CarteraABM/OperGestor")
    .setNavAdd(ViewBag.Add)
    .setAddUrl("/CarteraABM/OperGestor")
    .setNavDel(ViewBag.Del)
    .setDelUrl("/CarteraABM/OperGestor")
    .setExcelExport("/CarteraABM/ExportToExcelGestor")
    .Render()
    )