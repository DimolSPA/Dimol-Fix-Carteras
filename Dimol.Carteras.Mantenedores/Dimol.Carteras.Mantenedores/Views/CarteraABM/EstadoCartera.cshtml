@model Dimol.Carteras.Mantenedores.Models.GridModel
@{
    ViewBag.Title = "Estado Cartera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Estado Cartera</h2>
<br /><br />
@using Mvc.HtmlHelpers

@(Html.jqGrid("EstadoCartera")
    .addColumn(new Column("Codemp").setLabel("codemp")
        .setHidden(true)
        .setEditable(true)
        .setWidth(50))
    .addColumn(new Column("Id").setLabel("Id")
      
        .setSortable(true)
        .setWidth(50))
   .addColumn(new Column("Agrupa").setLabel("Agrupa")
       .setSortable(true)     
       .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\""+ViewBag.Tipo+"\"")
        .setWidth(80))
    .addColumn(new Column("Nombre").setLabel("Nombre")
       .setEditable(true)    
       .setSortable(true)
       .setWidth(200))
    .addColumn(new Column("Utiliza").setLabel("Estado por documento")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(120))
     .addColumn(new Column("PredJu").setLabel("Utilizar en Pre y Jud")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(120))
     .addColumn(new Column("SolFecha").setLabel("Solicita Fecha")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(120))
     .addColumn(new Column("GenRet").setLabel("Solicita Retiro")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(120))
     .addColumn(new Column("Compromiso").setLabel("Solicita Monto Compromiso")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(120))

    .setCaption("EstadoCartera")
    .setRequestType(RequestType.get)
    .setUrl("~/CarteraABM/GetEstadoCartera/")
    .setAltRows(true)
    .setAltClass("altGridRows")
    .setAutoWidth(true)
    .setRowNum(10)
    .setRowList(new int[] { 10, 30, 50 })
    .setViewRecords(true)
    .setSortName("Nombre")
    .setSortOrder(SortOrder.asc)
    .setPager("pagerEstadoCartera")
    .setPagerPos(PagerPos.center)
    .setPgButtons(true)
    .setCellEdit(false)
    .setCellSubmit(CellSubmit.clientArray)
    .setNavEdit(ViewBag.Edit)
    .setEditUrl("/CarteraABM/OperEstadoCartera")
    .setNavAdd(ViewBag.Add)
    .setAddUrl("/CarteraABM/OperEstadoCartera")
    .setNavDel(ViewBag.Del)
    .setDelUrl("/CarteraABM/OperEstadoCartera")
    .setExcelExport("/CarteraABM/ExportToExcelEstadoCartera")
    .Render()
    )