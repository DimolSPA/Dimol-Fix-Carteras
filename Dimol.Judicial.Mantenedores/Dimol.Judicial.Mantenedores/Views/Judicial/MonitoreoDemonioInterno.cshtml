@{
    ViewBag.Title = "MonitoreoDemonioInterno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Monitoreo Demonio Interno</h2>
<br />
<style>
    .badge {
        padding: 1px 9px 2px;
        font-size: 0.875em;
        font-weight: bold;
        white-space: nowrap;
        color: #ffffff;
        background-color: #999999;
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        border-radius: 10px;
    }

    .badge-info {
        background-color: #3a87ad;
    }

    .list-group {
        padding-left: 0;
        margin-bottom: 0px;
    }

    .list-group-item {
        position: relative;
        display: block;
        padding: 5px 10px;
        margin-bottom: -1px;
        background-color: #fff;
        border: 1px solid #ddd;
        font-size: 0.875em;
    }

        .list-group-item:first-child {
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
        }

        .list-group-item:last-child {
            margin-bottom: 0;
            border-bottom-right-radius: 4px;
            border-bottom-left-radius: 4px;
        }

        .list-group-item > .badge {
            float: right;
        }

            .list-group-item > .badge + .badge {
                margin-right: 5px;
            }

    .nav-pills > li > a > .badge {
        margin-left: 3px;
    }

    .progress {
        position: relative;
        height: 20px;
        margin-top: 2px;
        margin-bottom: 5px;
        overflow: hidden;
        background-color: #f5f5f5;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
        box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
    }

    .progress-bar {
        float: left;
        width: 0;
        height: 100%;
        font-size: 0.875em;
        font-weight: bold;
        line-height: 20px;
        color: #000;
        text-align: center;
        background-color: #337ab7;
        -webkit-box-shadow: inset 0 -1px 0 rgba(0,0,0,.15);
        box-shadow: inset 0 -1px 0 rgba(0,0,0,.15);
        -webkit-transition: width .6s ease;
        -o-transition: width .6s ease;
        transition: width .6s ease;
    }

    .progress span {
        position: absolute;
        display: block;
        width: 100%;
        color: black;
    }

    .progress-bar-success {
        background-color: #5cb85c;
    }

    .progress-bar-info {
        background-color: #5bc0de;
    }

    .progress-bar-warning {
        background-color: #f0ad4e;
    }

    .progress-bar-danger {
        background-color: #d9534f;
    }
</style>

@using Mvc.HtmlHelpers
@using JQueryUIHelpers
<div class="ui-widget ui-widget-content ui-corner-all" style="outline: 0px none;">
    <div style="height: auto; min-height: 300px; width: auto; margin: 10px;border:none" class="ui-widget-content">
        <div class="tabla">
            <div class="fila">
                <div class="col" style="width:45%">
                    <div class="tabla">
                        <div class="fila">
                            <div class="col" style="float:left;width:300px">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <b>Actualización Diaria</b>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Deudores")
                                        <span class="badge badge-info">@ViewBag.CantCausasDiaAnterior</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Causas")
                                        <span class="badge badge-info">@ViewBag.CantDeudoresDiaAnterior</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Monto")
                                        <span class="badge badge-info">@ViewBag.SaldoDiaAnterior</span>
                                    </li>

                                </ul>
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <b>Deudores Judicializados</b>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Deudores")
                                        <span class="badge badge-info">@ViewBag.CantDeudoresJudicializado</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Causas")
                                        <span class="badge badge-info">@ViewBag.CantCausasJudicializadas</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Monto")
                                        <span class="badge badge-info">@ViewBag.SaldoJudicializado</span>
                                    </li>
                                </ul>
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <b>Deudores con Causas Activas</b>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Deudores")
                                        <span class="badge badge-info">@ViewBag.CantDeudoresCausasActivas</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Causas")
                                        <span class="badge badge-info">@ViewBag.CantCausasActivas</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Monto")
                                        <span class="badge badge-info">@ViewBag.SaldoCausaActiva</span>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col" style="width:45%">
                    <div class="tabla">
                        <div class="fila">
                            <div class="col" style="float:right;width:300px">
                                <ul class="list-group">
                                    
                                    <li class="list-group-item">
                                        @Html.Label("Fecha Última Actualización")
                                        <span class="badge badge-info">@ViewBag.FecUtimaActualizacion</span>
                                    </li>
                                </ul>
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <b>Causas Archivadas Actuales</b>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Deudores")
                                        <span class="badge badge-info">@ViewBag.CantDeudoresCausasArchivadas</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Causas")
                                        <span class="badge badge-info">@ViewBag.CantCausasArchivadas</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Monto")
                                        <span class="badge badge-info">@ViewBag.SaldoCausaArchivada</span>
                                    </li>
                                </ul>
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <b>Causas Archivadas los ultimos 7 días</b>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Deudores")
                                        <span class="badge badge-info">@ViewBag.CantDeudoresCausasArchivadas7dias</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Nº Causas")
                                        <span class="badge badge-info">@ViewBag.CantCausaArchivada7Dias</span>
                                    </li>
                                    <li class="list-group-item">
                                        @Html.Label("Monto")
                                        <span class="badge badge-info">@ViewBag.SaldoCausaArchivada7Dias</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <br />
        @(Html.jqGrid("gridMonitoreoInternoDemonio")
                    .addColumn(new Column("Cliente").setLabel("Cliente")
                    .setSortable(true)
                    .setWidth(182))
                    .addColumn(new Column("TotalCausas").setLabel("Nº Total de Causas")
                    .setSortable(true).setAlign(Align.center)
                    .setWidth(116))
                    .addColumn(new Column("ActualizadasCount").setLabel("Nº Causas Actualizadas")
                    .setSortable(true).setAlign(Align.center)
                    .setWidth(130))
                    .addColumn(new Column("NoActualizadasCount").setLabel("Nº Causas No Actualizadas")
                    .setSortable(true).setAlign(Align.center)
                    .setWidth(140))
                    .addColumn(new Column("Porcentaje").setLabel("% Act. Sobre Cliente")
                    .setSortable(true).setAlign(Align.center).setCustomFormatter("formatPercentage")
                    .setWidth(120))
                    .addColumn(new Column("ACount").setLabel("0 - 15")
                    .setSortable(true).setAlign(Align.center)
                    .setWidth(60))
                    .addColumn(new Column("BCount").setLabel("15 - 30")
                    .setSortable(true).setAlign(Align.center)
                    .setWidth(60))
                    .addColumn(new Column("CCount").setLabel("31 - 60")
                    .setSortable(true).setAlign(Align.center)
                    .setWidth(60))
                    .addColumn(new Column("DCount").setLabel("> 60")
                    .setSortable(true).setAlign(Align.center)
                    .setWidth(60))
                // settings
                    .setCaption("Causas Clientes")
                    .setRequestType(RequestType.get)
                    .setUrl("~/Judicial/ListarPanelMonitoreoInternoClientes/")
                    .setAltRows(true)
                    .setAltClass("altGridRows")
                    .setAutoWidth(true)
                    .setRowNum(50)
                    .setRowList(new int[] { 50, 100, 150 })
                    .setViewRecords(true)
                    .setSortName("Cliente")
                    .setSortOrder(SortOrder.asc)
                    .setPager("pagerInternoDemonio")
                    .setPagerPos(PagerPos.center)
                    .setPgButtons(true)
                    .setCellEdit(false)
                    .setCellSubmit(CellSubmit.clientArray)
                    .setShrinkToFit(false)
                    .setFooterRow(true)
                    .onLoadComplete("fnOnLoadCompleteInternoClientes(this, xhr)")
                    .Render()
        )
        <br />

    </div>
</div>
