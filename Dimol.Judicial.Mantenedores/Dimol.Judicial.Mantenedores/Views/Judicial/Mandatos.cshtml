@model Dimol.Judicial.Mantenedores.Models.GridModel
@{
    ViewBag.Title = "Mandatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Mandatos</h2>
<br /><br />
@using Mvc.HtmlHelpers

@(Html.jqGrid("Mandatos")
    .addColumn(new Column("Codemp").setLabel("codemp")
        .setHidden(true)
        .setEditable(false)
        .setWidth(50))
    .addColumn(new Column("IdCliente").setLabel("Idcliente")
        .setHidden(true)
        .setSortable(true)
        .setWidth(50))
    .addColumn(new Column("IdNotaria").setLabel("IdNotaria")
        .setHidden(true)
        .setEditable(true)
        .setSortable(true)
        .setWidth(80))
    .addColumn(new Column("NombreNotaria").setLabel("Notaria")
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\""+ViewBag.Notarias+"\"")
        .setWidth(200))
    .addColumn(new Column("NumeroRepertorio").setLabel("Numero Repertorio")
        .setEditable(true)
        .setSortable(true)
        .setWidth(80))
     .addColumn(new Column("RutCliente").setLabel("Rut Cliente")
        .setEditable(false)
        .setSortable(true)
        .setWidth(70))
     .addColumn(new Column("NombreCliente").setLabel("Cliente")
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\""+ViewBag.Clientes+"\"")
        .setWidth(300))
      .addColumn(new Column("FechaAsignacion").setLabel("Fecha Asignación")
        .setEditable(true)
        .setSortable(true)
        .setAlign(Align.center)
        .setWidth(120).setSearchType(SearchType.datepicker)
        .setSearchDateFormat("dd-MM-yyyy"))
      .addColumn(new Column("FechaVencimiento").setLabel("Fecha Vencimiento")
        .setEditable(true)
        .setSortable(true)
        .setAlign(Align.center)
        .setWidth(120).setSearchType(SearchType.datepicker)
        .setSearchDateFormat("dd-MM-yyyy"))
      .addColumn(new Column("Indefinido").setLabel("Indefinido")
        .setEditable(true)
        .setEditType(EditType.checkbox).setFormatter(Formatters.checkbox)
        .setAlign(Align.center)
        .setWidth(50)) 

    .setCaption("Mandatos")
    .setRequestType(RequestType.get)
    .setUrl("~/Judicial/GetMandatos/")
    .setAltRows(true)
    .setAltClass("altGridRows")
    .setAutoWidth(true)
    .setRowNum(10)
    .setRowList(new int[] { 10, 30, 50 })
    .setViewRecords(true)
    .setSortName("NombreCliente,NombreNotaria")
    .setSortOrder(SortOrder.asc)
    .setPager("pagerMandatos")
    .setPagerPos(PagerPos.center)
    .setPgButtons(true)
    .setCellEdit(false)
    .setCellSubmit(CellSubmit.clientArray)
    .setNavEdit(ViewBag.Edit)
    .setEditUrl("/Judicial/OperMandatos")
    .setNavAdd(ViewBag.Add)
    .setAddUrl("/Judicial/OperMandatos")
    .setNavDel(ViewBag.Del)
    .setDelUrl("/Judicial/OperMandatos")
    .setExcelExport("/Judicial/ExportToExcelMandatos")
    .Render()

)
