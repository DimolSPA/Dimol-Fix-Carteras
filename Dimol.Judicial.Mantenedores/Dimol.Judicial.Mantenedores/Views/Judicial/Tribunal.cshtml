@model Dimol.Judicial.Mantenedores.Models.GridModel
@{
    ViewBag.Title = "Tribunales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Tribunales</h2>
<br /><br />
@using Mvc.HtmlHelpers
@(Html.jqGrid("Tribunal")
    .addColumn(new Column("Codemp").setLabel("codemp")
        .setHidden(true)
        .setEditable(false)
        .setWidth(30))
    .addColumn(new Column("Id").setLabel("Id")
        .setSortable(true)
        .setWidth(30))
    .addColumn(new Column("Rut").setLabel("Rut")
        .setEditable(true)
        .setSortable(true)
        .setWidth(60))
    .addColumn(new Column("Nombre").setLabel("Nombre")
        .setEditable(true)
        .setSortable(true)
        .setWidth(280))
        .addColumn(new Column("IdTipo").setLabel("IdTipo")
        .setHidden(true)
        .setEditable(true)
        .setSortable(true)
        .setWidth(80))
    .addColumn(new Column("TipoTribunal").setLabel("Tipo")
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\""+ViewBag.TiposTribunal+"\"")
        .setWidth(180))
    .addColumn(new Column("IdComuna").setLabel("IdComuna")
        .setEditable(true)
        .setSortable(true)
        .setWidth(80))   
    .addColumn(new Column("Direccion").setLabel("Direccion")
        .setEditable(true)
        .setSortable(true)
        .setWidth(250))
    .addColumn(new Column("Telefono1").setLabel("Telefono1")
        .setEditable(true)
        .setSortable(true)
        .setWidth(150))
    .addColumn(new Column("Telefono2").setLabel("Telefono2")
        .setEditable(true)
        .setSortable(true)
        .setWidth(150))
    .addColumn(new Column("Fax").setLabel("Fax")
        .setEditable(true)
        .setSortable(true)
        .setWidth(80))
     .addColumn(new Column("Email").setLabel("Email")
        .setEditable(true)
        .setSortable(true)
        .setWidth(150))
      .addColumn(new Column("IdBanco").setLabel("IdBanco")
        .setHidden(true)  
        .setEditable(true)
        .setSortable(true)
        .setWidth(80))
      .addColumn(new Column("Banco").setLabel("Banco")
        .setEditable(true)
        .setEditType(EditType.select)
        .setEditOptions("value:\""+ViewBag.Bancos+"\"")
        .setWidth(100))
       .addColumn(new Column("CuentaCorriente").setLabel("CuentaCorriente")
        .setEditable(true)
        .setSortable(true)
        .setWidth(100))
      
    .setCaption("Tribunal")
    .setRequestType(RequestType.get)
    .setUrl("~/Judicial/GetTribunal/")
    .setAltRows(true)
    .setAltClass("altGridRows")
    .setAutoWidth(true)
    .setRowNum(10)
    .setRowList(new int[] { 10, 30, 50 })
    .setViewRecords(true)
    .setSortName("Nombre")
    .setSortOrder(SortOrder.asc)
    .setPager("pagerTribunal")
    .setPagerPos(PagerPos.center)
    .setPgButtons(true)
    .setCellEdit(false)
    .setCellSubmit(CellSubmit.clientArray)
    .setNavEdit(ViewBag.Edit)
    .setEditUrl("/Judicial/OperTribunal")
    .setNavAdd(ViewBag.Add)
    .setAddUrl("/Judicial/OperTribunal")
    .setNavDel(ViewBag.Del)
    .setDelUrl("/Judicial/OperTribunal")
    .setExcelExport("/Judicial/ExportToExcelTribunal")
    .Render()

)
