                    .setSortable(true)
                    .setWidth(90))
                    .addColumn(new Column("Procesado").setLabel("Procesado")
                    .setSortable(true)
                    .setWidth(90))
                .addColumn(new Column("mensaje").setLabel("Error")
                        .setSortable(true)
