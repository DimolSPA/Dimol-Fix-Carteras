                    .setAltClass("altGridRows")
                    .setAutoWidth(true)
                    .setRowNum(10)
                    .setRowList(new int[] { 10, 30, 50 })
                    .setViewRecords(true)
                    .setSortName("Deudor")
                    .setSortOrder(SortOrder.asc)
                    .setPager("pagerCargaTerreno")
                    .setPagerPos(PagerPos.center)
                    .setPgButtons(true)
                    .setCellEdit(false)
                    .setCellSubmit(CellSubmit.clientArray)
                    .Render()

                    )
                </div>
            </div>

        </div>
        }
        <br />
    
    </div>
</div>